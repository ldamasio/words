{
  "openapi": "3.0.0",
  "info": {
    "title": "Pilar Words",
    "description": "Pilar Words -- Documentation.",
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:5000",
      "description": "Pilar Words API"
    }
  ],
  "components": {
    "schemas": {
      "Words": {
        "properties": {
          "words": {
            "type": "array"
          }
        }
      }
    }
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Returns a response from the API.",
        "responses": {
          "200": {
            "description": "The default response.",
            "content": {
              "\ttext/html; charset=utf-8": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  },
                  "example": "Consulte a rota /docs para documentação e rota /health para simples ping de monitoramento da API"
                }
              }
            }
          }
        }
      }
    },
    "/vowel_count": {
      "post": {
        "summary": "Used to count and add the total vowels in each of the words.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Words"
              },
              "examples": {
                "AscOrder": {
                  "value": {
                    "words": [
                      "batman",
                      "robin",
                      "coringa"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Words"
                },
                "examples": {
                  "AscOrder": {
                    "value": {
                      "words": {
                        "batman": "2",
                        "robin": "2",
                        "coringa": "3"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sort": {
      "post": {
        "summary": "Used to sort a list of words.",
        "description": "Optional extended description in CommonMark or HTML.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Words"
              },
              "examples": {
                "AscOrder": {
                  "value": {
                    "words": [
                      "batman",
                      "robin",
                      "coringa"
                    ],
                    "order": "asc"
                  }
                },
                "DescOrder": {
                  "value": {
                    "words": [
                      "batman",
                      "robin",
                      "coringa"
                    ],
                    "order": "desc"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Words"
                },
                "examples": {
                  "AscOrder": {
                    "value": {
                      "words": [
                        "batman",
                        "coringa",
                        "robin"
                      ]
                    }
                  },
                  "DescOrder": {
                    "value": {
                      "words": [
                        "robin",
                        "coringa",
                        "batman"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Used to check the API is responsive.",
        "description": "Optional extended description in CommonMark or HTML.",
        "responses": {
          "200": {
            "description": "The default response.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "message": "OK"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}